<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/md_theme_cardView_background"
    android:padding="16dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardCornerRadius="9dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/txt_dataCreated"
            tools:text="28 September"
            android:textSize="16sp"
            android:maxWidth="250dp"
            android:gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap" />

        <ImageButton
            android:id="@+id/icDeleteNote"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="14dp"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/delete_icon"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/txt_NoteTitle"
            tools:text="Note Title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/txt_dataCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_NoteText"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            tools:text="@string/lorem_ipsum"
            android:gravity="start"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_below="@id/txt_NoteTitle"
            android:layout_width="326dp"
            android:layout_height="75dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>